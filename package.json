{
  "name": "droidbridge",
  "displayName": "DroidBridge",
  "description": "Seamlessly connect, control, and mirror Android devices inside VS Code using ADB + scrcpy.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Testing"
  ],
  "keywords": [
    "android",
    "adb",
    "scrcpy",
    "device",
    "debugging",
    "mobile",
    "screen-mirror",
    "wireless"
  ],
  "author": {
    "name": "DroidBridge Team"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/droidbridge.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/droidbridge/issues"
  },
  "homepage": "https://github.com/your-username/droidbridge#readme",
  "publisher": "droidbridge-team",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "droidbridge.connectDevice",
        "title": "Connect to Device",
        "category": "DroidBridge"
      },
      {
        "command": "droidbridge.disconnectDevice",
        "title": "Disconnect Device",
        "category": "DroidBridge"
      },
      {
        "command": "droidbridge.launchScrcpy",
        "title": "Launch Scrcpy",
        "category": "DroidBridge"
      },
      {
        "command": "droidbridge.launchScrcpyScreenOff",
        "title": "Launch Scrcpy Screen Off",
        "category": "DroidBridge"
      },
      {
        "command": "droidbridge.stopScrcpy",
        "title": "Stop Scrcpy",
        "category": "DroidBridge"
      },
      {
        "command": "droidbridge.showLogs",
        "title": "Show Logs",
        "category": "DroidBridge"
      },
      {
        "command": "droidbridge.checkBinaries",
        "title": "Check Binary Status",
        "category": "DroidBridge"
      },
      {
        "command": "droidbridge.downloadBinaries",
        "title": "Download Missing Binaries",
        "category": "DroidBridge"
      },
      {
        "command": "droidbridge.refreshBinaries",
        "title": "Refresh Binary Detection",
        "category": "DroidBridge"
      }
    ],
    "views": {
      "droidbridge": [
        {
          "id": "droidbridge-sidebar",
          "name": "Device Manager",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "droidbridge",
          "title": "DroidBridge",
          "icon": "$(device-mobile)"
        }
      ]
    },
    "configuration": {
      "title": "DroidBridge",
      "properties": {
        "droidbridge.adbPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to ADB binary. Leave empty to use bundled binary."
        },
        "droidbridge.scrcpyPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to scrcpy binary. Leave empty to use bundled binary."
        },
        "droidbridge.defaultIp": {
          "type": "string",
          "default": "192.168.1.100",
          "description": "Default IP address for ADB connection."
        },
        "droidbridge.defaultPort": {
          "type": "string",
          "default": "5555",
          "description": "Default port for ADB connection."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vscode-test",
    "test:unit": "npm run compile-tests && vscode-test --run --grep \"Unit Tests\"",
    "test:integration": "npm run compile-tests && vscode-test --run --grep \"Integration Tests\"",
    "test:e2e": "npm run compile-tests && vscode-test --run --grep \"End-to-End\"",
    "test:coverage": "npm run compile-tests && c8 vscode-test --run",
    "test:watch": "npm run compile-tests && vscode-test --run --watch",
    "clean": "rimraf dist out *.vsix",
    "package:vsix": "npm run package && vsce package",
    "publish": "npm run package && vsce publish",
    "publish:pre": "npm run package && vsce publish --pre-release",
    "publish:interactive": "node scripts/publish.js",
    "validate": "node scripts/validate.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "c8": "^10.1.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "glob": "^11.0.0",
    "mocha": "^10.8.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  }
}
